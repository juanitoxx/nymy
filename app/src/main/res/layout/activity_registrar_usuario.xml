<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nimy.nimy.RegistrarUsuario"
    android:background="@drawable/background_usuario">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imagenLogo"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/i_registrousuario" />

        <EditText
            android:id="@+id/txtNombreUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/i_usuario"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Ingrese Nombre Usuario"
            android:maxLines="1"
            android:padding="8dp"
            android:textColorHint="#85929E"
            android:inputType="textCapSentences"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f9d7db" />

        <EditText
            android:id="@+id/txtNumeroTelefonico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/i_telefono"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Ingrese Numero Telefonico"
            android:maxLines="1"
            android:padding="8dp"
            android:textColorHint="#85929E"
            android:inputType="phone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f9d7db" />

        <EditText
            android:id="@+id/txtCorreoElectronico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/i_correo"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Ingrese Correo Electronico "
            android:maxLines="1"
            android:padding="8dp"
            android:textColorHint="#85929E"
            android:inputType="textEmailAddress"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f9d7db" />

        <EditText
            android:id="@+id/txtReCorreoElectronico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/i_correo"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Ingrese Correo Electronico Nuevamente "
            android:maxLines="1"
            android:padding="8dp"
            android:textColorHint="#85929E"
            android:inputType="textEmailAddress"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f9d7db" />

        <EditText
            android:id="@+id/txtContrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/i_pass"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Ingrese Contraseña"
            android:maxLines="1"
            android:padding="8dp"
            android:textColorHint="#85929E"
            android:inputType="textPassword"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f9d7db" />

        <EditText
            android:id="@+id/txtReContrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/i_pass"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Ingrese Contraseña Nuevamente "
            android:maxLines="1"
            android:padding="8dp"
            android:textColorHint="#85929E"
            android:inputType="textPassword"/>


        <Button
            android:id="@+id/btnRegistrarse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/background_boton_rosa"
            android:text="Registrarse"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:clickable="true"
            android:layout_marginTop="24dp"
            android:textSize="18sp"/>

    </LinearLayout>
    </ScrollView>
</LinearLayout>
